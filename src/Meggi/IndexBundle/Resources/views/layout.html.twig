<script>
    $(document).ready(function(){
//        $('#login').click(function() {
//            $('.overview').show();
//            $('.login').css({'top' : $(window).scrollTop()+100+'px', 'display' : 'block'});
//        });
        $('a.forgot').click(function() {
            $('.login').hide();
            $('.overview').show();
            $('.popup_password').css({'top' : $(window).scrollTop()+100+'px', 'display' : 'block'});
            return false;
        });
        $(".overview").click( function(event){
            if( $(event.target).closest(".login").length ){
                return;
            }

            $(".login").hide();
            $(".overview").hide();
            $(".order_popup").hide();
            $('.popup_password').hide();

            event.stopPropagation();
        });
        $('.sel_st').styler();
    });

    $(window).scroll(function(){
        var top = $(this).scrollTop();
        var wdt = $(this).width();
        if (top > 161 && wdt > 874) {
            $('.top_wrap').addClass('fixed');
            $('body').css('padding-top', '161px');
        } else {
            $('.top_wrap').removeClass('fixed');
            $('body').css('padding-top', '0px');
        }
    });
</script>
